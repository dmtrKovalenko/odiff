{
  "name": "odiff",
  "version": "2.0.0",
  "description": "The fastest image difference tool.",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "release": {
      "rewritePrefix": true,
      "bin": {
        "odiff": "ODiffBin"
      },
      "includePackages": [
        "odiff",
        "esy-libpng",
        "esy-zlib"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "run": "esy x ODiffBin",
    "test": "esy x RunTests.exe",
    "format": "esy dune build @fmt --auto-promote",
    "doc": "esy dune build @doc",
    "post-release": "node .ci/pipelines-release.js"
  },
  "dependencies": {
    "@esy-ocaml/reason": ">= 3.6.0 < 4.0.0",
    "@opam/camlimages": "5.0.4",
    "@opam/cmdliner": "1.0.4",
    "@opam/dune": "2.7.1",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "@reason-native/rely": "^3.2.1",
    "esy-libpng": "dmtrKovalenko/esy-libpng#4895961b8e92ff0ebba78df6ccb338ecd2272003",
    "ocaml": "~4.10.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/ocaml-lsp-server": "1.4.0",
    "@opam/odoc": "*",
    "refmterr": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmtrKovalenko/odiff"
  },
  "author": {
    "email": "dmtr.kovalenko@outlook.com",
    "name": "Dmitriy Kovalenko",
    "url": "https://dmtrkovalenko.dev"
  }
}

