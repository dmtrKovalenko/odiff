{
  "name": "odiff",
  "version": "2.3.1",
  "description": "The fastest image difference tool.",
  "license": "MIT",
  "esy": {
    "build": "dune build --release --only-packages odiff,odiff-io,odiff-core",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-packages odiff,odiff-io,odiff-core",
    "release": {
      "bin": {
        "odiff": "ODiffBin"
      },
      "includePackages": [
        "odiff"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re",
      "Z_LIB_PATH": "#{esy-zlib.lib}"
    }
  },
  "scripts": {
    "run": "esy x ODiffBin",
    "test": "esy x RunTests.exe",
    "test-js": "esy ava",
    "format": "esy dune build @fmt --auto-promote",
    "doc": "esy dune build @doc",
    "post-release": "node .ci/pipelines-release.js"
  },
  "dependencies": {
    "@esy-ocaml/reason": ">= 3.6.0 < 4.0.0",
    "@opam/camlimages": "5.0.4",
    "@opam/cmdliner": "1.0.4",
    "@opam/dune": "< 3.0.0",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "@reason-native/rely": "^3.2.1",
    "ava": "^3.15.0",
    "esy-libpng": "EduardoRFS/esy-libpng#fd6e69baaeaeac68dc247d304080d84aa765dd4c",
    "esy-zlib": "*",
    "ocaml": "~4.10.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/ocaml-lsp-server": "1.4.0",
    "@opam/odoc": "*",
    "refmterr": "*"
  },
  "resolutions": {
    "esy-zlib": "esy-packages/esy-zlib#f691047f6fe5f2272e7a2e890f8055d3b0071b10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmtrKovalenko/odiff"
  },
  "author": {
    "email": "dmtr.kovalenko@outlook.com",
    "name": "Dmitriy Kovalenko",
    "url": "https://dmtrkovalenko.dev"
  }
}
